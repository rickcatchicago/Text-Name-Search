using System;
using System.Collections;
using System.Collections.Generic;
using System.Diagnostics;
using System.Linq;
using System.Text;
using System.Text.RegularExpressions;
using System.Threading.Tasks;


//  Find Names in Paragraphs  Interview Test  written by Rick Clute
//  This is self contained so can be built as is , Data is self contained for the purposes for simplicity
namespace findnames
{
    class Program
    {
        static void Main(string[] args)
        {
            ArrayList findNames = new ArrayList();
            // initialization of name to search for
            // a Database could be used here to provide a collection of names
            theName aName = new theName();
            // Connor Gary Smith
            aName.firstName = "Connor";
            aName.middleName = "Gary";
            aName.lastName = "Smith";
            findNames.Add(aName);
            // Seth David Greenly
            aName = new theName();
            aName.firstName = "Seth";
            aName.middleName = "David";
            aName.lastName = "Greenly";
            findNames.Add(aName);
            // David Warren Black
            aName = new theName();
            aName.firstName = "David";
            aName.middleName = "Warren";
            aName.lastName = "Black";
            findNames.Add(aName);

            ArrayList stringPatterns;
            Stopwatch sw;
            // test input into search by Paragraph
            // text could be provided here from either a stream or some persisted data stored in a database
            string[] inputtext = { "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas Connor Smith dignissim erat consequat, placerat erat in, lobortis nulla. Vestibulum scelerisque magna ut urna hendrerit, finibus rutrum dolor faucibus. Seth David Greenly Aliquam feugiat urna vel tellus congue, non dictum orci varius. Vivamus tristique, lorem ut hendrerit aliquet, nulla nisl eleifend quam, sed laoreet erat lorem non diam. Nulla facilisi. Etiam bibendum Seth D. Greenly nec diam sed vestibulum. Nunc ipsum enim, imperdiet eu feugiat vel, vestibulum a justo. Donec efficitur velit porta odio consequat viverra. Quisque in tristique enim, sed euismod purus. Nullam eu leo pellentesque, porta leo in, maximus risus. Morbi in risus id risus feugiat egestas. David Black Nunc egestas, metus at volutpat tempus, massa justo venenatis arcu, a ornare mauris arcu at justo. Sed accumsan, David W. Black erat vitae euismod facilisis, risus odio bibendum neque, sit amet tincidunt diam ante et dolor. Morbi leo felis, posuere id ex ut, varius ornare libero.", 
                             "Suspendisse lacus ipsum, molestie vel nulla id, commodo hendrerit est. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Maecenas finibus magna libero, vehicula David Black luctus lorem varius non. Integer ut tempor massa, eget sollicitudin purus. Mauris efficitur in ipsum eu consectetur. Aliquam vitae nulla vitae sapien laoreet vehicula et et ex. Donec molestie auctor lorem eget rhoncus. Donec ornare sapien in turpis auctor, ut commodo David Warren Black augue cursus. Pellentesque fermentum nunc turpis, eu vulputate Connor Smith leo aliquet eu. Nam quis pretium felis. Sed id turpis sed lacus malesuada pulvinar et eget leo. Vestibulum eget dapibus mi. Duis tempor nec tellus vitae aliquet. Nam sapien massa, ornare non posuere sit amet, cursus a velit. Curabitur nec consectetur metus. Donec porttitor at libero a blandit.", 
                             "Proin luctus augue sit amet sem varius ultricies. Vestibulum nibh ligula, sollicitudin ac lectus eu, congue imperdiet quam. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Nulla ac nisl sed risus tincidunt finibus. Curabitur viverra eget justo non dignissim. Proin varius malesuada enim non vulputate. Integer fermentum interdum felis, luctus commodo nisi pulvinar quis.",
                             "Donec pharetra faucibus urna a semper. Morbi tempor maximus Connor G Smith lectus sit amet interdum. Integer pretium ut est non vulputate. Aliquam pulvinar turpis laoreet dictum ultrices. Aenean diam metus, semper at quam et, iaculis viverra ante. Sed efficitur lorem quis consectetur mollis. Vivamus ut purus mauris. Quisque at gravida dolor. Fusce congue magna enim, ut placerat est porttitor a. Phasellus rutrum, neque lacinia cursus mattis, est lacus placerat nunc, a ornare enim nunc at justo. Sed urna leo, tincidunt elementum consequat vel, condimentum sed lacus."};
            // Build regular expressions for name searches
            //  builds regurlar expressions from a collection in this case an ArrayList can be substituted for a collection from a database query
            foreach (theName searchName in findNames)
            {
                //  Build patterns for search
                stringPatterns = new ArrayList();
                string bldPattern = "";
                // build first Name Last Name
                int nLength = searchName.firstName.Length;
                int cnt = 0;
                bldPattern = "";
                //  Patern for First Name Last Name Search
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.firstName[i] + "]";
                }
                nLength = searchName.lastName.Length;
                cnt = 0;
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //  add  Last Name Expression
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.lastName[i] + "]";
                }
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //  add search pattern to search pattern list
                stringPatterns.Add(bldPattern);

                //Build First Name Middle Initial period Last Name Search Pattern
                nLength = searchName.firstName.Length;
                cnt = 0;
                bldPattern = "";
                //  Patern for First Name Middle Initial period Last Name Search
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.firstName[i] + "]";
                }

                //  add Middle Initial
                bldPattern = bldPattern + @"\s" + "[" + searchName.middleName[0] + "]" + "[.]";
                nLength = searchName.lastName.Length;
                cnt = 0;
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //  add  Last Name Expression
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.lastName[i] + "]";
                }
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //add search pattern for first name middle initial period last name
                stringPatterns.Add(bldPattern);

                //Build First Name Middle Initial Last Name Search Pattern
                nLength = searchName.firstName.Length;
                cnt = 0;
                bldPattern = "";
                //  Patern for First Name Middle Initial Last Name Search
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.firstName[i] + "]";
                }

                //  add Middle Initial
                bldPattern = bldPattern + @"\s" + "[" + searchName.middleName[0] + "]";
                nLength = searchName.lastName.Length;
                cnt = 0;
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //  add  Last Name Expression
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.lastName[i] + "]";
                }
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //add pattern to search
                stringPatterns.Add(bldPattern);

                //Build First Name Middle Name Last Name Search Pattern
                nLength = searchName.firstName.Length;
                cnt = 0;
                bldPattern = "";
                //  Patern for First Name Middle Initial Last Name Search
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.firstName[i] + "]";
                }
                bldPattern = bldPattern + @"\s";
                //  add Middle Name
                nLength = searchName.middleName.Length;
                cnt = 0;
                bldPattern = "";
                //  Patern for First Name Middle Initial Last Name Search
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.middleName[i] + "]";
                }

                nLength = searchName.lastName.Length;
                cnt = 0;
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //  add  Last Name Expression
                for (int i = 0; i < nLength; i++)
                {
                    bldPattern = bldPattern + "[" + searchName.lastName[i] + "]";
                }
                //add expression for space
                bldPattern = bldPattern + @"\s";
                //add pattern to search
                stringPatterns.Add(bldPattern);
                int nameCnt = 0;
                foreach (string patternItem in stringPatterns)
                {
                    foreach (var paragraph in inputtext)
                    {
                        MatchCollection lstm = Regex.Matches(paragraph, patternItem, RegexOptions.IgnoreCase);
                        nameCnt = nameCnt + lstm.Count;
                    }
                }

                Console.WriteLine(searchName.firstName + " " + searchName.middleName + " " + searchName.lastName + " (" + nameCnt.ToString() + ")");

            }

            Console.WriteLine();
            Console.WriteLine("hit any key to continue");

            Console.ReadKey();

        }

        public class theName
        {
            public string firstName;
            public string middleName;
            public string lastName;
        }
    }

}



